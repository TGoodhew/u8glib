uint8_t contrast = 0;

void loop(void) {
  
  u8g.setContrast(contrast);
  
  // picture loop
  u8g.firstPage();  
  do {
    draw();
  } while( u8g.nextPage() );
  
  // rebuild the picture after some delay
  delay(20);
  
  // contrast manipulation
  contrast+=8;
}

