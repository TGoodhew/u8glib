//U8GLIB_DOGM128 u8g(13, 11, 10, 9);                    // SPI communication: SCK = 13, MOSI = 11, CS = 10, A0 = 9
//U8GLIB_DOGXL160_BW u8g(13, 11, 10, 9);            // SPI communication: SCK = 13, MOSI = 11, CS = 10, A0 = 9
